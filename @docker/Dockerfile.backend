# Dockerfile pour le backend Strapi
FROM node:20-alpine AS base

# Installer les d√©pendances syst√®me n√©cessaires
# - build-base, gcc, autoconf, automake, zlib-dev, libpng-dev, nasm : pour la compilation native
# - vips-dev : pour sharp (traitement d'images)
# - python3, make, g++ : pour better-sqlite3 et autres modules natifs
# - bash, git : utilitaires
# - su-exec : pour changer d'utilisateur de mani√®re s√©curis√©e
RUN apk update && apk add --no-cache \
    build-base \
    gcc \
    autoconf \
    automake \
    zlib-dev \
    libpng-dev \
    nasm \
    bash \
    vips-dev \
    git \
    python3 \
    make \
    g++ \
    su-exec

# √âtape de d√©pendances (toutes pour le build)
FROM base AS deps
WORKDIR /app

# Copier les fichiers de d√©pendances
# IMPORTANT: package-lock.json doit √™tre pr√©sent dans le repo (retir√© du .gitignore)
COPY @back/package.json @back/package-lock.json ./
# Installer node-gyp globalement et configurer npm
RUN npm install -g node-gyp
RUN npm config set fetch-retry-maxtimeout 600000 -g
# Si npm ci √©choue (lock file d√©synchronis√©), r√©g√©n√©rer le lock file avec npm install
RUN npm ci || (echo "‚ö†Ô∏è  package-lock.json d√©synchronis√©, r√©g√©n√©ration..." && npm install && npm cache clean --force)
RUN npm cache clean --force

# √âtape de build
FROM base AS builder
WORKDIR /app

# Copier les d√©pendances
COPY --from=deps /app/node_modules ./node_modules
COPY @back ./

# Build de l'application (le build inclut l'admin panel)
RUN npm run build
# S'assurer que le dossier dist existe (peut √™tre vide dans Strapi 5)
RUN mkdir -p /app/dist
# V√©rifier que le build a r√©ussi (l'admin panel peut √™tre construit au runtime dans Strapi 5)
# V√©rifier que @strapi/admin existe au minimum
RUN test -d /app/node_modules/@strapi/admin || (echo "‚ùå Erreur: @strapi/admin non trouv√©" && exit 1)
# Afficher la structure pour diagnostic
RUN echo "üìÅ Structure de @strapi/admin:" && \
    ls -la /app/node_modules/@strapi/admin/ 2>/dev/null | head -10 || echo "‚ö†Ô∏è  Dossier non trouv√©" && \
    echo "üìÅ Recherche de l'admin panel construit:" && \
    find /app/node_modules/@strapi/admin -name "index.html" -type f 2>/dev/null | head -5 || echo "‚ö†Ô∏è  index.html non trouv√©" && \
    find /app/node_modules/@strapi/admin -type d -name "build" 2>/dev/null | head -5 || echo "‚ö†Ô∏è  Dossier build non trouv√©"

# √âtape de production
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production

# Cr√©er un utilisateur non-root
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 strapi

# Copier les node_modules depuis builder (qui contient l'admin panel construit)
# IMPORTANT: Dans Strapi 5, l'admin panel est construit dans node_modules/@strapi/admin/dist/server/server/build/
# Il faut donc copier les node_modules complets depuis l'√©tape builder qui a fait le build
COPY --from=builder --chown=strapi:nodejs /app/node_modules ./node_modules

# Copier les fichiers n√©cessaires
# Cr√©er le dossier dist (peut √™tre vide dans Strapi 5, l'admin est dans node_modules)
RUN mkdir -p ./dist
# Copier le contenu de dist depuis builder s'il existe
COPY --from=builder --chown=strapi:nodejs /app/dist ./dist
COPY --from=builder --chown=strapi:nodejs /app/package*.json ./
COPY --from=builder --chown=strapi:nodejs /app/jsconfig.json ./jsconfig.json
COPY --from=builder --chown=strapi:nodejs /app/config ./config
COPY --from=builder --chown=strapi:nodejs /app/database ./database
COPY --from=builder --chown=strapi:nodejs /app/public ./public
# Copier le favicon.png s'il existe √† la racine (utiliser un pattern pour √©viter l'erreur si absent)
COPY --from=builder --chown=strapi:nodejs /app/favicon.png ./favicon.png
COPY --from=builder --chown=strapi:nodejs /app/src ./src
COPY --from=builder --chown=strapi:nodejs /app/types ./types

# Cr√©er les r√©pertoires n√©cessaires
RUN mkdir -p .tmp public/uploads /data/db

# Copier le script d'initialisation depuis le contexte de build
# Le contexte est .. donc @docker/docker-entrypoint.sh est accessible
COPY @docker/docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

EXPOSE 1337

# Utiliser le script d'initialisation comme entrypoint
# Le script s'ex√©cute en root pour ajuster les permissions, puis passe √† l'utilisateur strapi
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
CMD ["npm", "start"]
